<div class="max-w-4xl mx-auto px-6 py-12 bg-white bg-opacity-60 rounded-lg shadow">
  <div class="text-center mb-6">
    <h2 class="text-4xl font-extrabold mb-2 text-gray-800">{{recipeInformation.title}}</h2>
    <img src="{{recipeInformation.image}}" alt="{{recipeInformation.title}}" class="rounded-lg mx-auto shadow-md w-96 max-w-full mt-4">
  </div>

  <div class="mb-8 text-gray-700 text-md leading-relaxed text-justify">
    {{{recipeInformation.summary}}}
  </div>

  {{#if recipeInformation.analyzedInstructions.[0].steps}}
    <h3 class="text-2xl font-semibold mb-3 text-center">Instructions</h3>
    <ol class="list-decimal list-inside space-y-3 text-gray-700 text-base leading-relaxed">
      {{#each recipeInformation.analyzedInstructions.[0].steps}}
        <li>{{this.step}}</li>
      {{/each}}
    </ol>
  {{else}}
    <p class="text-center text-gray-600 mt-4">No step-by-step instructions found for this recipe.</p>
  {{/if}}

  <div class="text-center mt-10">
    <button id="back-to-list" class="text-gray-900 bg-gradient-to-r from-red-200 via-red-300 to-yellow-200 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-red-100 dark:focus:ring-red-400 font-medium rounded-lg text-sm px-5 py-2.5 shadow-md">
      Back to recipe list
    </button>
  </div>
</div>

<script>
  const backListButton = document.getElementById("back-to-list");
  backListButton.addEventListener("click", () => {
    window.location.href = "/profile/kitchen-details";
  });
</script>
