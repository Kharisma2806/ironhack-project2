<div class="form">
<div class="flex justify-center">
<h2 class="text-4xl dark:text-black pb-4">Recipe Information</h2>
</div>

{{#if recipeInformation}}
  <div class="flex flex-wrap items-center justify-center">
    <div class="rounded-lg overflow-hidden shadow-lg w-1/3 mb-6">
      <img src="{{recipeInformation.image}}" alt="{{recipeInformation.title}}" class="rounded-lg">
    </div>
    <div class="w-2/3">
      <h2 class="text-2xl font-bold text-center">{{recipeInformation.title}}</h2>
      <p class="mt-2 text-center">{{{recipeInformation.summary}}}</p>
    </div>
  </div>
  <h2 class="text-2xl mt-8 text-center">Instructions:</h2>
  <ol>
    {{#each recipeInformation.analyzedInstructions.[0].steps}}
    <li>{{this.step}}</li>
    {{/each}}
  </ol>
  <!-- Display other recipe details as needed -->
  {{else}}
  <p class="text-center">No recipe information available</p>
  {{/if}}

  <button id="back-to-list" class="text-gray-900 bg-gradient-to-r from-red-200 via-red-300 to-yellow-200 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-red-100 dark:focus:ring-red-400 font-medium rounded-lg text-sm px-5 py-2.5 text-center mt-8 shadow-md">Back to recipe list</button>
</div>

<script>
    const backListButton = document.getElementById("back-to-list");
    backListButton.addEventListener("click", () => {
        window.location.href = "/profile/kitchen-overview";
    });
</script>