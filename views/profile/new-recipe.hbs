<h3>Your recipes</h3>
<!-- if a recipe for each title and next to it button for edit and delete -->
 {{#each recipes}}
            <li>{{this.title}}
            <a href="/profile/your-recipes/details/{{this.id}}">Details</a>
            <a href="/profile/edit-recipe">Edit</a>
            <a href="/profile/your-recipes/delete/{{this.id}}">Delete</a>
            </li>
          {{/each}}
    <br>
    <br>       
<button onclick="scrollToSection()">Create recipe</button>

<h3>Create recipe</h3>
<form action="/profile/your-recipes" method="POST">

  <label for="title">Title:</label>
  <input type="text" id="title" name="title" required>
  <br>
  <br>

  <label for="ingredients">Ingredients:</label>
  <textarea id="ingredients" name="ingredients" required></textarea>
  <br>
  <br>

    <fieldset id="instructions-fieldset">
    <legend>Instructions:</legend>
    <div id="instruction-container">
      <div class="instruction">
        <label>Step Number:</label>
        <input type="number" name="stepNumber[]" required>
        <label>Text:</label>
        <textarea name="instructionText[]" required></textarea>
      </div>
    </div>
    <button type="button" id="add-instruction-button">Add Step</button>
  </fieldset>
  <br>
  <br>

  <label for="dishType">Dish Type:</label>
  <select id="dishType" name="dishType" required>
    <option value="breakfast">Breakfast</option>
    <option value="main_course">Main Course</option>
    <option value="soup">Soup</option>
    <option value="snack">Snack</option>
    <option value="drink">Drink</option>
    <option value="dessert">Dessert</option>
    <option value="other">Other</option>
  </select>

<br>
  <br>

  <label for="diet">Diet:</label>
  <select id="diet" name="diet" required>
    <option value="vegan">Vegan</option>
    <option value="vegetarian">Vegetarian</option>
    <option value="plant-based">Plant-based</option>
    <option value="gluten-free">Gluten-free</option>
    <option value="omnivore">Omnivore</option>
  </select>

<br>
  <br>

  <label for="cuisine">Cuisine:</label>
  <input type="text" id="cuisine" name="cuisine" required>

<br>
  <br>

  <label for="duration">Duration (in minutes):</label>
  <input type="number" id="duration" name="duration" required>

<br>
  <br>
   <label for="level">Level:</label>
  <select id="level" name="level" required>
    <option value="Easy">Easy</option>
    <option value="Medium">Medium</option>
    <option value="Pro">Pro</option>
  </select>

  <input type="submit" value="Create">
</form>

<!-- allow a user to have one step if needed with if/else -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const addInstructionButton = document.getElementById('add-instruction-button');
    const instructionContainer = document.getElementById('instruction-container');

    addInstructionButton.addEventListener('click', () => {
      const newInstruction = document.createElement('div');
      newInstruction.classList.add('instruction');
      newInstruction.innerHTML = `
        <label>Step Number:</label>
        <input type="number" name="stepNumber[]" required>
        <label>Text:</label>
        <textarea name="instructionText[]" required></textarea>
      `;
      instructionContainer.appendChild(newInstruction);
    });
  });
</script>
 